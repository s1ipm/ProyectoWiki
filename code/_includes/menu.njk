<script>
  const pages = {
  "inicio": "/ProyectoWiki/",
  "acerca": "/ProyectoWiki/acerca/",
  "artículos": "/ProyectoWiki/articulos/",
  "ediciones": "/ProyectoWiki/Ediciones/",
  "versiones": "/ProyectoWiki/Ediciones/",
  "biomas": "/ProyectoWiki/Biomas/",
  "redstone": "/ProyectoWiki/Redstone/",
  "mecanismo": "/ProyectoWiki/Redstone/",
  "criaturas": "/ProyectoWiki/articulos/criaturas/",
  "fabricación": "/ProyectoWiki/Fabricación/",
  "mesa": "/ProyectoWiki/Fabricación/",
  "crafteo": "/ProyectoWiki/Fabricación/",
  "alquimia": "/ProyectoWiki/Alquimia/",
  "aventura": "/ProyectoWiki/Aventura/",
  "comercio": "/ProyectoWiki/Comercio/",
  "creativo": "/ProyectoWiki/creativo/",
  "dimensionend": "/ProyectoWiki/DimensionEND/",
  "end": "/ProyectoWiki/DimensionEND/",
  "dimensionnether": "/ProyectoWiki/DimensionNETHER/",
  "nether": "/ProyectoWiki/DimensionNETHER/",
  "encantamientos": "/ProyectoWiki/Encantamientos/",
  "espectador": "/ProyectoWiki/Espectador/",
  "extremo": "/ProyectoWiki/Extremo/",
  "hardcore": "/ProyectoWiki/Extremo/",
  "introduccion": "/ProyectoWiki/Introduccion/",
  "jugabilidad": "/ProyectoWiki/Jugabilidad/",
  "jugador": "/ProyectoWiki/Jugador/",
  "mineria": "/ProyectoWiki/Minería/",
  "pociones": "/ProyectoWiki/Pociones/",
  "supervivencia": "/ProyectoWiki/Supervivencia/"
};

const searchInput = document.getElementById('searchInput');
const searchResults = document.getElementById('searchResults');

searchInput.addEventListener('input', function () {
  const query = searchInput.value.toLowerCase();
  console.log("Busqueda:", query);
  searchResults.innerHTML = '';
  if (query.length > 0) {
    const filteredPages = Object.keys(pages).filter(page => page.toLowerCase().includes(query));

    if (filteredPages.length > 0) {
      searchResults.style.display = 'block';
      filteredPages.forEach(page => {
        const resultItem = document.createElement('div');
        resultItem.classList.add('search-result-item');
        resultItem.textContent = page.charAt(0).toUpperCase() + page.slice(1);
        resultItem.addEventListener('click', () => {
          window.location.href = pages[page];
        });
        searchResults.appendChild(resultItem);
      });
    } else {
      searchResults.style.display = 'none';
    }
  } else {
    searchResults.style.display = 'none';
  }
});

</script>

