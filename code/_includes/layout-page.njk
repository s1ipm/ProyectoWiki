<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description | default('Explora todo sobre Minecraft.') }}">
<link rel="icon" href="https://cdn2.steamgriddb.com/icon/bf6423635e56a99e9df17852c6bfadca/32/512x512.png">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  {% include "header.njk" %}

  <div class="container">
    <div class="content-wrapper">
      <main class="main-content">
        <article class="post-content">
          <p><strong>{{ description }}</strong></p>
          <div>{{ content | safe }}</div>
      </main>

  {% include "footer.njk" %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

  <script>
    document.getElementById('searchForm').addEventListener('submit', function (event) {
      event.preventDefault();
      const query = document.getElementById('searchInput').value.toLowerCase();
      const pages = {
        "inicio": "/",
        "acerca": "/acerca",
        "art√≠culos": "/articulos",
        "minecraft": "/articulos/minecraft.html",
        "biomas": "/articulos/biomas.html",
        "redstone": "/articulos/redstone.html",
        "criaturas": "/articulos/criaturas.html"
      };
      if (pages[query]) {
        window.location.href = pages[query];
      } else {
        alert("No se encontraron resultados.");
      }
    });
  </script>

</body>
</html>